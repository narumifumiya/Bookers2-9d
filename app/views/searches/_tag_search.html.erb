<% if user_signed_in? %>

    <%= form_with url: search_path, local: true, method: :get do |f| %>
      <!--　検索内容をwordとしてアクションに送信-->
      <%= f.text_field :word %>
      <!-- 検索したモデルをrangeとしてアクションに送信-->
      <%= f.hidden_field :range, :value => "tag" %>
      <!--　検索方法をsearchとしてアクションに送信　配列の中に２語入れることによって、同じ意味を持たせることができる、表示されるのは前方に記述した文字列-->
      <%= f.hidden_field :search, :value => "perfect" %>
      <%= f.submit "タグ検索", class: "btn btn-primary" %>
    <% end %>

<% end %>

